<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <title>Add Classification</title>
    </head>

    <body>
        <%- nav %>
        <h1>Add New Classification</h1>

        <% if (message) { %>
        <p class="flash-message"><%= message %></p>
        <% } %>

        <% if (errors && errors.length > 0) { %>
        <ul>
            <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
            <% }) %>
        </ul>
        <% } %>

        <form action="/inv/classification/add" method="POST">
            <label for="classification_name">Classification Name</label>
            <input type="text" id="classification_name" name="classification_name"
                value="<%= typeof classification_name != 'undefined' ? classification_name : '' %>"
                pattern="^[A-Za-z0-9]+$" title="No spaces or special characters allowed" required />
            <button type="submit">Add Classification</button>
        </form>
    </body>

</html>