<!DOCTYPE html>
<html lang="en">

    <head>
        <title><%= title %> - CSE Motors</title>
        <link rel="stylesheet" href="styles.css" />
    </head>

    <body>
        <div class="register-container">
            <h1><%= title %></h1>

            <% if (errors && errors.length > 0) { %>
            <ul>
                <% errors.forEach(err => { %>
                <li><%= err.msg %></li>
                <% }) %>
            </ul>
            <% } %>

            <% if (message) { %>
            <p class="flash-message"><%= message %></p>
            <% } %>

            <form class="register-form" action="/inv/update" method="POST" novalidate>
                <!-- Hidden field with inv_id -->
                <input type="hidden" name="inv_id" value="<%= inv_id %>">

                <div class="form-group">
                    <label for="classification_id">Classification:</label>
                    <%- classificationSelect %>
                </div>

                <div class="form-group">
                    <label for="inv_make">Make:</label>
                    <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make || '' %>" />
                </div>

                <div class="form-group">
                    <label for="inv_model">Model:</label>
                    <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model || '' %>" />
                </div>

                <div class="form-group">
                    <label for="inv_year">Year:</label>
                    <input type="number" id="inv_year" name="inv_year" required min="1900" max="2099" step="1"
                        value="<%= inv_year || '' %>" />
                </div>

                <div class="form-group">
                    <label for="inv_description">Description:</label>
                    <textarea id="inv_description" name="inv_description"
                        required><%= inv_description || '' %></textarea>
                </div>

                <div class="form-group">
                    <label for="inv_price">Price:</label>
                    <input type="number" id="inv_price" name="inv_price" required min="0" step="0.01"
                        value="<%= inv_price || '' %>" />
                </div>

                <div class="form-group">
                    <label for="inv_miles">Miles:</label>
                    <input type="number" id="inv_miles" name="inv_miles" required min="0" step="1"
                        value="<%= inv_miles || '' %>" />
                </div>

                <div class="form-group">
                    <label for="inv_color">Color:</label>
                    <input type="text" id="inv_color" name="inv_color" required value="<%= inv_color || '' %>" />
                </div>

                <div class="form-group">
                    <label for="inv_image">Image Path:</label>
                    <input type="text" id="inv_image" name="inv_image"
                        value="<%= inv_image || '/images/no-image-available.png' %>" />
                </div>

                <div class="form-group">
                    <label for="inv_thumbnail">Thumbnail Path:</label>
                    <input type="text" id="inv_thumbnail" name="inv_thumbnail"
                        value="<%= inv_thumbnail || '/images/no-image-available.png' %>" />
                </div>

                <button type="submit">Update Vehicle</button>
                <input type="hidden" name="inv_id" <% if (locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
            </form>
        </div>
    </body>

</html>